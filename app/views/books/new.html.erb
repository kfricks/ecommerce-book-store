<div class="c-section">
  <h1 class="c-title">Create a New Book</h1>
  <div class="c-card u-margin-bottom-small">
    <div class="c-section">
      <%= form_for @book do |form| %>
        <div>Title: <%= form.text_field :title %></div>
        <div>Price: <%= form.text_field :price %></div>
        <div>Book Cover Image: <%= form.file_field :book_cover, direct_upload: true %></div>
    </div>
  </div>
  <div><%= form.submit class:"c-button c-button--small c-button--focal"%></div>
  <% end %>
</div>
